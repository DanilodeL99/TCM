
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <title>@ViewData["Title"] - Pitaya Vegan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoEcommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/carrinho.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark !important">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Logo.png" id="logo" width="200px" height="100px" /><span class="site-title">Pitaya Vegan</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="CadastrarUsuario">Cadastro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Loja" asp-action="CatalogoProdutos">Menu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>



@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PitayaVegan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- POPUP CARRINHO -->
    <div id="popup-carrinho" class="popup-carrinho">
        <div class="popup-header">
            <h4>Sacola</h4>
            <button class="fechar" onclick="fecharCarrinho()">×</button>
        </div>
        <div id="lista-carrinho" class="popup-body"></div>
        <div class="popup-footer">
            <div id="total-carrinho">Total: R$ 0,00</div>
            <button class="btn-finalizar" onclick="finalizarPedido()">Finalizar</button>
        </div>
    </div>


</body>
</html>
