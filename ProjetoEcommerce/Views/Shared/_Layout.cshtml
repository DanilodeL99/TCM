@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Pitaya Vegan</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/carrinho.css" />

    <style>
        /* NAVBAR / POPUP styles (compacto, ajuste no CSS principal se quiser) */
        .pv-navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 24px;
            border-bottom: 3px solid #F5357A;
            background: #fff;
            z-index: 1000;
        }

        .pv-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .pv-logo {
            height: 56px;
        }

        .pv-title {
            font-weight: 600;
            color: #222;
            margin-left: 6px;
        }

        .pv-links .pv-link {
            margin-right: 14px;
            color: #555;
            text-decoration: none;
            font-weight: 600;
        }

            .pv-links .pv-link:hover {
                color: #F5357A;
            }

        .pv-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .icon-btn {
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 6px;
        }

        .icon-img {
            width: 34px;
            height: 34px;
        }

        .user-area {
            position: relative;
        }

        .profile-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            cursor: pointer;
            border: 2px solid #eee;
            transition: .15s;
        }

            .profile-icon:hover {
                border-color: #F5357A;
            }

        .user-popup {
            position: absolute;
            top: 56px;
            right: 0;
            width: 240px;
            background: #fff;
            border-radius: 18px;
            border: 3px solid #f0c6d1;
            box-shadow: 0 12px 30px rgba(0,0,0,0.08);
            padding: 12px;
            display: none;
            z-index: 2000;
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity .18s ease, transform .18s ease;
        }

            .user-popup.show {
                display: block;
                opacity: 1;
                transform: translateY(0);
            }

        /* popup-carrinho minimal */
        .popup-carrinho {
            position: fixed;
            right: 24px;
            top: 80px;
            width: 320px;
            z-index: 2500;
        }

        .popup-card {
            background: #fff;
            border-radius: 18px;
            border: 3px solid #f0c6d1;
            padding: 12px;
            box-shadow: 0 12px 30px rgba(0,0,0,0.06);
        }

        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .popup-body {
            max-height: 320px;
            overflow: auto;
            margin-bottom: 8px;
        }

        .item-carrinho {
            display: flex;
            gap: 8px;
            align-items: center;
            padding: 8px;
            border-radius: 8px;
            background: #fafafa;
            margin-bottom: 8px;
        }

        .img-carrinho {
            width: 64px;
            height: 64px;
            object-fit: cover;
            border-radius: 8px;
        }

        .info-carrinho {
            flex: 1;
        }

        .nome-item {
            font-weight: 700;
            margin-bottom: 6px;
        }

        .preco-item {
            color: #F5357A;
            margin-bottom: 6px;
        }

        .qtd-controls {
            display: flex;
            gap: 6px;
            align-items: center;
        }

        .btn-remover {
            background: #ff5364;
            color: #fff;
            border: none;
            padding: 6px 8px;
            border-radius: 6px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    @{
        var nomeUsuario = HttpContextAccessor?.HttpContext?.Session.GetString("UsuarioLogado");
        bool logado = !string.IsNullOrEmpty(nomeUsuario);
    }

    <header>
        <nav class="pv-navbar">
            <div class="pv-left">
                <a asp-controller="Home" asp-action="Index" class="pv-brand" style="display:flex;align-items:center;text-decoration:none;">
                    <img src="~/img/Logo.png" class="pv-logo" alt="Logo" />
                    <span class="pv-title">Pitaya Vegan</span>
                </a>

                <div class="pv-links">
                    <a asp-controller="Home" asp-action="Index" class="pv-link">Home</a>
                    <a asp-controller="Loja" asp-action="CatalogoProdutos" class="pv-link">Menu</a>
                </div>
            </div>

            <div class="pv-right">
                <button id="btnOpenCart" class="icon-btn" title="Abrir sacola" aria-label="Abrir sacola">
                    <img src="~/img/sacola.png" class="icon-img" alt="Sacola" />
                </button>

                @if (!logado)
                {
                    <a asp-controller="Usuario" asp-action="Login" class="pv-link small">Login</a>
                    <a asp-controller="Usuario" asp-action="CadastrarUsuario" class="pv-link small">Cadastro</a>
                }
                else
                {
                    <div class="user-area">
                        <img id="btnProfile" src="~/img/profile.png" class="profile-icon" alt="Perfil" />
                        <div id="userPopup" class="user-popup" role="dialog" aria-hidden="true">
                            <div style="display:flex; gap:10px; align-items:center; margin-bottom:8px;">
                                <img src="~/img/profile.png" style="width:48px;height:48px;border-radius:50%;" />
                                <div>
                                    <div style="font-weight:700;">@nomeUsuario</div>
                                    <div class="text-muted" style="font-size:0.85rem;">@DateTime.Now.ToString("yyyy")</div>
                                </div>
                            </div>

                            <a asp-controller="Usuario" asp-action="Menu" class="popup-link">Minhas Configurações</a>
                            <a asp-controller="Usuario" asp-action="Logout" class="popup-link logout">Sair</a>
                        </div>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- POPUP CARRINHO -->
    <div id="popup-carrinho" class="popup-carrinho" style="display:none;">
        <div class="popup-card" role="dialog" aria-label="Carrinho">
            <div class="popup-header">
                <h4 style="margin:0;">Sacola</h4>
                <button class="fechar" id="btnFecharCarrinho" aria-label="Fechar sacola">×</button>
            </div>

            <div id="lista-carrinho" class="popup-body">
                <div class="lista-vazia">Seu carrinho está vazio.</div>
            </div>

            <div class="popup-footer">
                <div id="total-carrinho" style="font-weight:700; margin-bottom:8px;">Total: R$ 0,00</div>

                <div style="display:flex;gap:8px; justify-content:flex-end;">
                    <button id="btnClearCart" class="btn btn-outline-secondary">Limpar</button>
                    <button id="btnFinalizar" class="btn btn-success">Finalizar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // expõe se o usuário está logado como booleano JS
        window.usuarioEstaLogado = @(logado ? "true" : "false");
    </script>

    <script src="~/js/carrinho.js"></script>

    <script>
        // profile popup toggle (melhor com click + persistência curta)
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById('btnProfile');
            const popup = document.getElementById('userPopup');

            if (btn && popup) {
                btn.addEventListener('click', function (e) {
                    e.stopPropagation();
                    popup.classList.toggle('show');
                });

                document.addEventListener('click', function (e) {
                    if (!btn.contains(e.target) && !popup.contains(e.target)) {
                        popup.classList.remove('show');
                    }
                });
            }

            // abrir/fechar sacola via botões
            const btnOpen = document.getElementById('btnOpenCart');
            const btnClose = document.getElementById('btnFecharCarrinho');

            if (btnOpen) btnOpen.addEventListener('click', function () { if (window.abrirCarrinho) window.abrirCarrinho(); });
            if (btnClose) btnClose.addEventListener('click', function () { if (window.fecharCarrinho) window.fecharCarrinho(); });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
