@{
    ViewData["Title"] = "Login";
}

<link href="~/css/login.css" rel="stylesheet" />

<div class="form-wrapper d-flex justify-content-center align-items-center vh-100">
    <div class="custom-card shadow-lg p-4" style="max-width:420px;">
        <h2 class="text-center mb-3">Acesso à Conta</h2>

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger">@TempData["MensagemErro"]</div>
        }

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input name="NomeUsu" class="form-control" placeholder="Digite seu nome" />
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input name="SenhaUsu" type="password" class="form-control" placeholder="••••••" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="CadastrarUsuario">Criar conta</a>
            </div>
        </form>
    </div>
</div>
