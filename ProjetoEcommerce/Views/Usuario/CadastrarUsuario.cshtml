@model ProjetoEcommerce.Models.Usuario
@{
    ViewData["Title"] = "Cadastrar Usuário";
}
<link href="~/css/cadastrousuario.css" rel="stylesheet" />

<div class="form-wrapper d-flex justify-content-center align-items-center vh-100">
    <div class="custom-card shadow-lg p-4" style="max-width:480px;">
        <h2 class="text-center mb-2">Cadastro de Usuário</h2>
        <p class="text-center text-muted">Crie sua conta para acessar o sistema</p>

        <form method="post" asp-action="CadastrarUsuario">
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input asp-for="NomeUsu" class="form-control" placeholder="Digite seu nome" />
                <span asp-validation-for="NomeUsu" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input asp-for="SenhaUsu" type="password" class="form-control" placeholder="Digite sua senha" />
                <span asp-validation-for="SenhaUsu" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-gradient">Cadastrar</button>
            </div>
        </form>
    </div>
</div>
